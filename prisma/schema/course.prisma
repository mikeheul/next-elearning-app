model Course {
    id                  String       @id @default(auto()) @map("_id") @db.ObjectId  
    title               String                               
    description         String                               

    lessons             Lesson[]
    quizzes             Quiz[]

    isPublic            Boolean     @default(true)
    
    userId              String                  

    courseprogresses    CourseProgress[]

    createdAt           DateTime     @default(now())          
    updatedAt           DateTime     @updatedAt               
}